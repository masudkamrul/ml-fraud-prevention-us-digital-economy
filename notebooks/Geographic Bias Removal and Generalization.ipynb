from sklearn.model_selection import train_test_split
from sklearn.metrics import accuracy_score, confusion_matrix, ConfusionMatrixDisplay, roc_curve, auc
from sklearn.compose import ColumnTransformer
from sklearn.preprocessing import OneHotEncoder, StandardScaler
from sklearn.pipeline import Pipeline
import matplotlib.pyplot as plt

# Remove Customer Location from preprocessing config
numeric_features = [
    "Transaction Amount",
    "Quantity",
    "Customer Age",
    "Account Age Days",
    "Transaction Hour",
]

categorical_features = [
    "Payment Method",
    "Product Category",
    "Device Used",  # Removed Customer Location here
]

# Rebuild preprocessor without Customer Location
preprocessor = ColumnTransformer(
    transformers=[
        ("num", StandardScaler(), numeric_features),
        ("cat", OneHotEncoder(handle_unknown="ignore"), categorical_features),
    ]
)

# Rebuild pipeline
pipeline_fixed = Pipeline([
    ("preprocess", preprocessor),
    ("model", pipeline.named_steps["model"])  # reuse same model type
])

# Remove customer location also from data
X_mod = X.drop(columns=["Customer Location"])

# Train-test split
X_train, X_test, y_train, y_test = train_test_split(
    X_mod, y, test_size=0.3, random_state=42, stratify=y
)

# Fit updated pipeline
pipeline_fixed.fit(X_train, y_train)

# Predictions
y_pred = pipeline_fixed.predict(X_test)
y_proba = pipeline_fixed.predict_proba(X_test)[:, 1]

acc = accuracy_score(y_test, y_pred)
print("Accuracy:", acc)

# Confusion Matrix
cm = confusion_matrix(y_test, y_pred)
disp = ConfusionMatrixDisplay(cm, display_labels=["Legit", "Fraud"])
disp.plot(cmap="Blues", values_format="d")
plt.title(f"Confusion Matrix — Model w/o Customer Location (Accuracy: {acc:.2f})")
plt.show()

# ROC Curve
fpr, tpr, _ = roc_curve(y_test, y_proba)
roc_auc = auc(fpr, tpr)
print("AUC:", roc_auc)

plt.figure()
plt.plot(fpr, tpr, label=f"AUC = {roc_auc:.3f}")
plt.plot([0, 1], [0, 1], "--")
plt.title(f"ROC Curve — Model w/o Customer Location (Accuracy: {acc:.2f})")
plt.xlabel("False Positive Rate")
plt.ylabel("True Positive Rate")
plt.legend()
plt.grid(True)
plt.show()


# Feature Importance (grouped for readability)
model = pipeline_fixed.named_steps["model"]
feature_names = pipeline_fixed.named_steps["preprocess"].get_feature_names_out()
importances = model.feature_importances_

# Group one-hot encoded features by original column name
grouped = {}
for name, imp in zip(feature_names, importances):
    key = name.split("__")[-1].split("_")[0]
    grouped[key] = grouped.get(key, 0) + imp

# Sort and take top 8 important features
top = sorted(grouped.items(), key=lambda x: x[1], reverse=True)[:8]
names, values = zip(*top)

plt.figure(figsize=(8,5))
plt.barh(names, values)
plt.title(f"Top Indicators — Model w/o Customer Location (Accuracy: {acc:.2f})")
plt.gca().invert_yaxis()
plt.xlabel("Relative Importance")
plt.tight_layout()
plt.show()

print("✓ Feature importance visual created")
